<h1>Chef</h1>
<% if notice %>
  <div class="notice">
    <%= notice %>
  </div>
<% end %>
<%= link_to "Sign up", '/signup', {class: "signup"} %>
<%= form_for :user_session, html: {class: "login"} do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit %>
<% end %>
