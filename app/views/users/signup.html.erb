<div class="signup-page">
  <h1>Sign up</h1>
  <%= form_for @user, html: {class: "signup"} do |f| %>
    <% if @user.errors.any? %>
      <div class="errors">
        <ul>
          <% for message in @user.errors.full_messages %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
      

    <%= f.label :email %>
    <%= f.email_field :email %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>

    <%= f.submit "Sign up" %>
  <% end %>
</div>
