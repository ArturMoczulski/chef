<!DOCTYPE html>
<html>
<head>
  <title>Chef</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if !flash.empty? %>
  <div class="flash">
  <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, :class => name %>
  <% end %>
  </div>
<% end %>

<%= yield %>

</body>
</html>
